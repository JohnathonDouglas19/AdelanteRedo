                                            <li>@Html.ActionLink("Calendar", "Index", "Event")</li>
                                            <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                                        </ul>
                                    </div>
                                </li>
                            }}
                        @{
                            if (User.IsInRole("Volunteer"))
                            {
                                <li>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle nav-button-user" type="button" data-toggle="dropdown" style="margin-top: 15px; margin-right: 10px; background-color: #de2f0b; border-color: #de2f0b; height: 40px; width:200px; position: center;">
                                            Volunteer
                                        </button>
                                        <ul class="dropdown-menu nav-dropdown">
                                            <li>@Html.ActionLink("Calendar", "Index", "Event")</li>
                                            <li>@Html.ActionLink("Students", "Index", "Students")</li>
                                            <li>@Html.ActionLink("Student Attendance", "Index", "MeetingStudentAttendances")</li>
                                        </ul>
                                    </div>
                                </li>
                            }}
                        @{
                            if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                            {
                                <li>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle nav-button-user" type="button" data-toggle="dropdown"
