                                            <li>@Html.ActionLink("Staff", "Index", "Staffs")</li>
                                            <li>@Html.ActionLink("Sessions", "Index", "Meetings")</li>
                                            <li>@Html.ActionLink("Student Attendance", "Index", "MeetingStudentAttendances")</li>
                                            <li>@Html.ActionLink("Session Location Management", "Index", "Locations")</li>
                                            <li>@Html.ActionLink("Report", "Index", "Students")</li>
                                            <li>@Html.ActionLink("User Management", "Index", "UserAdmin" )</li>
                                            <li>@Html.ActionLink("Role Management", "Index", "RolesAdmin")</li>
                                        </ul>
                                    </div>
                                </li>
                                
