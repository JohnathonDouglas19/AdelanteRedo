<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {
    <p>
        Student LastName: @Html.TextBox("SearchString") <br />
        <input type="submit" value="Search" />
    </p>
